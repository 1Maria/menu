<h2>Categories</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
    <tr>
      <td><%= item.name %> </td>
      <td><%= item.image %> </td>
      <td><%= link_to '<button type="button">Show</button>' .html_safe, category %></td>
      <td><%= link_to '<button type="button">Edit</button>' .html_safe, edit_category_path(item) %></td>
      <td><%= link_to '<button type="button">Destroy</button>' .html_safe, category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
