<h2>Items</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.name %> </td>
      <td><%= item.description %> </td>
      <td><%= item.price %> </td>
      <td><%= link_to '<button type="button">Show</button>' .html_safe, item %></td>
      <td><%= link_to '<button type="button">Edit</button>' .html_safe, edit_item_path(item) %></td>
      <td><%= link_to '<button type="button">Destroy</button>' .html_safe, item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
